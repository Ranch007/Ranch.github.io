	height=&#34;111&#34;
	srcset=&#34;http://ranch007.github.io/p/vs-code-%E9%85%8D%E7%BD%AE-c-c-%E7%BC%96%E7%A8%8B%E8%BF%90%E8%A1%8C%E7%8E%AF%E5%A2%83/assets/file-20241007114834925_hu4554384277038523218.png 480w, http://ranch007.github.io/p/vs-code-%E9%85%8D%E7%BD%AE-c-c-%E7%BC%96%E7%A8%8B%E8%BF%90%E8%A1%8C%E7%8E%AF%E5%A2%83/assets/file-20241007114834925_hu2523044220243230486.png 1024w&#34;
	loading=&#34;lazy&#34;
	
		alt=&#34;新建一个test文件夹&#34;
	
	
		class=&#34;gallery-image&#34; 
		data-flex-grow=&#34;242&#34;
		data-flex-basis=&#34;581px&#34;
	
